%h3 New Cookie for oven '#{@oven.name}'

= form_for [@oven, @cookie] do |f|
  .row
    .small-8.columns
      = f.label :fillings
  .row
    .small-8.columns

      = f.text_field :fillings
  .row
    .small-8.columns
      %label
        Total Cookies
  .row
    .small-8.columns
      %input{type: :number, value: 1, name: :cookies_qty}

  .row
    .small-8.columns
      = f.submit 'Mix and bake', class: 'button'



